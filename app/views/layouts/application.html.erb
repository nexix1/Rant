<!DOCTYPE html>
<html>
<head>
  <title>Rant</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
				<%= image_tag "logo.svg" %>
			<% end %> 
		</div>

		<ul>
			<li class="category"><%= t "layouts.application.header1" %></li>
			<li>
				<%= link_to root_path do %>
					<%= t "layouts.application.link_to_blog" %>
				<% end %>
			</li>
			<li>
				<%= link_to about_path do %>
					<%= t "layouts.application.link_to_about" %>
				<% end %>
			</li>
		</ul>
		
		<!-- selects language to be displayed -->
		<ul>
			<li class="category">Languages</li>
			<li><%= link_to_unless_current "English", locale: "en" %></li>  
			<li><%= link_to_unless_current "Espanol - Google Translate", locale: "esgt" %></li>
			<li></li>
			<li></li>
		</ul>

		<% if !user_signed_in? %>
			<p class="sign_in">
				<%= link_to "Admin Login", user_session_path %></p>
		<% end %>
	</div>

	<div id="main_content">
		<div id="header">
			<p><%= t "layouts.application.title" %></p>

			<% if user_signed_in? %>
			<div class="buttons">
				<button class="button">
					<%= link_to new_post_path do %>
						<%= t "layouts.application.link_to_new_post" %>
					<% end %>
				</button>
				<button class="button">
					<%= link_to destroy_user_session_path, :method => :delete, data: { confirm: "Are you sure you want to log out?" } do %>
						<%= t "layouts.application.link_to_log_out" %>
					<% end %>
				</button>
			</div>
			<% end %>
		</div>
		
		<div id="page_wrapper">
			<% flash.each do |name, msg| %>
				<%= content_tag(:div, msg, class: "alert") %>
			<% end %>
		</div>
		
		<%= yield %>
	</div>

</body>
</html>
