<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>
	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago
		<% if user_signed_in? %>
			| <%= link_to edit_post_path(@post) do %>
					<%= t "posts.show.link_to_edit" %>
				<% end %>
			| <%= link_to post_path(@post), method: :delete, data: { confirm: 'Are you sure?'} do %>
					<%= t "posts.show.link_to_delete" %>
				<% end %>
		<% end %>
	</p>
	<p class="body">
		<%= @post.body %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> <%= t "posts.show.header2" %></h2>
		<%= render @post.comments %>

		<h3><%= t "posts.show.header3" %></h3>
		<%= render "comments/form" %>
	</div>
</div>